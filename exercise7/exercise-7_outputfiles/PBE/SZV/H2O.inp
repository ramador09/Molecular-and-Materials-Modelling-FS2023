&GLOBAL
  PROJECT H2O
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
 &GEO_OPT
  OPTIMIZER BFGS
  MAX_ITER  200               ! convergence criteria:
  MAX_DR    0.01              ! max change in geometry
  RMS_DR    0.003             ! rms for geometry
  MAX_FORCE 0.001             ! max force
  RMS_FORCE 0.0003            ! rms force
  &BFGS
   USE_MODEL_HESSIAN yes
  &END BFGS
 &END GEO_OPT
 &PRINT
  &TRAJECTORY on
   FORMAT xyz
   &EACH
    GEO_OPT 1
   &END EACH
  &END TRAJECTORY
 &END PRINT
&END MOTION

&FORCE_EVAL
 METHOD QS
 &DFT
 BASIS_SET_FILE_NAME BASIS_MOLOPT   ! file for the basis set     
 POTENTIAL_FILE_NAME GTH_POTENTIALS ! file for the pseudopotential    
 &PRINT
   &MO_CUBES
    ADD_LAST SYMBOLIC          
    NHOMO 1                ! for the HOMO
    NLUMO 1                ! and the LUMO
   &END MO_CUBES
 &END PRINT
 &MGRID
    CUTOFF 400
 &END MGRID
 CHARGE 0
 &POISSON                  ! settings for the Poisson problem
   PERIODIC NONE
   PSOLVER  WAVELET
 &END POISSON
 &QS
   METHOD GAPW             ! use gaussians and plane waves
 &END QS
    &SCF                   ! specifies self-consistency in DFT
      &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER DIIS
        N_DIIS 7
      &END
      SCF_GUESS RESTART
      EPS_SCF 1.0E-4
      MAX_SCF 50
       &OUTER_SCF
          EPS_SCF 1.0E-4
          MAX_SCF 500
       &END
    &END SCF
 &XC
   &XC_FUNCTIONAL PBE                ! PBE xc-functional
   &END XC_FUNCTIONAL
 &END XC
 &END DFT
 &PRINT                              ! infos to print
  &FORCES off
  &END FORCES
  &GRID_INFORMATION
  &END GRID_INFORMATION
  &PROGRAM_RUN_INFO
   &EACH
    GEO_OPT 1
   &END EACH
  &END PROGRAM_RUN_INFO
 &END PRINT

 &SUBSYS
  &CELL                         
    PERIODIC NONE                
    ABC 15 15 15               
  &END CELL
   &TOPOLOGY
        COORDINATE  xyz
        COORD_FILE_NAME  H2O.xyz
       &CENTER_COORDINATES
       &END
   &END TOPOLOGY
   &KIND H                         ! basis functions
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
   &END KIND
   &KIND C
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
   &END KIND
   &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
   &END KIND
   &END SUBSYS
&END FORCE_EVAL
 
 
